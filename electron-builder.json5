/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "com.wynode.app",
  asar: true,
  directories: {
    output: "release/${version}",
  },
  files: ["dist-electron", "dist", "chrome"],
  mac: {
    target: [
      {
        target: "dmg",
        arch: ["x64", "arm64"],
      },
      {
        target: "zip",
        arch: ["x64", "arm64"],
      },
    ],
    extraFiles: [
      {
        from: "chrome/mac",
        to: "Resources/chrome/mac",
      },
    ],
  },
  win: {
    target: [
      {
        target: "zip",
        arch: ["x64"],
      },
    ],
    extraFiles: [
      {
        from: "chrome/win",
        to: "chrome/win",
      },
      {
        from: "hooyoo-electron",
        to: "hooyoo-electron",
      },
    ],
    // "target": "zip",
    // artifactName: "${productName}_${version}.${ext}",
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
  publish: {
    provider: "github",
    owner: "wynode",
    repo: "etsow",
  },
}
